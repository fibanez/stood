FROM node:18-slim

WORKDIR /app

# Copy package files
COPY package.json .

# Install dependencies (none currently, but ready for future)
RUN npm install --only=production

# Copy server script
COPY node-server.js .
RUN chmod +x node-server.js

# Create non-root user
RUN useradd -m -u 1000 mcpuser
USER mcpuser

# Expose port for potential WebSocket mode (not implemented yet)
EXPOSE 8080

# Default command runs in stdio mode
CMD ["node", "node-server.js"]